{
  "compilerOptions": {
    "target": "ES2020",
    "module": "None",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "outDir": "../public/js",
    "strict": false,
    "noEmitOnError": false,
    "isolatedModules": false,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": false,
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": false
  },
  "include": [
    "../src/scripts/script-simple.ts",
    "../src/lib/api-client.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js",
    "**/*.js.map"
  ]
}