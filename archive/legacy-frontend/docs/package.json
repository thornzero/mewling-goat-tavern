{
  "name": "docs",
  "version": "1.0.0",
  "main": "js/script.js",
  "scripts": {
    "build": "npm run build:ts",
    "build:css": "tailwindcss -i ./build/input.css -o ./build/output.css --config ./build/tailwind.config.js --watch",
    "build:css:prod": "tailwindcss -i ./build/input.css -o ./build/output.css --config ./build/tailwind.config.js --minify && cat ./build/custom.css >> ./build/output.css",
    "build:ts": "tsc && npm run build:css:prod",
    "dev": "npm run tsc:watch & npm run build:css",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "lint": "eslint js/**/*.ts",
    "lint:fix": "eslint js/**/*.ts --fix"
  },
  "dependencies": {
    "swiper": "^11.2.10"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jsdoc": "^46.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0"
  }
}